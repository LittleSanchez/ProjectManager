<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ExpBag.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="500"
        Width="{Binding WindowWidth}" Height="{Binding WindowHeight}"
        x:Class="ExpBag.UI.Views.MainWindow"
       Title="DiscWidget" ShowInTaskbar="True" CanResize="True"
        WindowStartupLocation="CenterScreen"
        Content="{Binding Content}">

 
</Window>